@model IList<BookmakersApplication.ViewModel.Offer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>



@using (Html.BeginForm("Index", "Tickets", FormMethod.Get))

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    for (var i = 0; i < Model.Count(); i++)
    {

        @Html.HiddenFor(x => x[i].Tip.TipId)
        @Html.HiddenFor(x=>x[i].SelectedPair.SelectedTip.Pair)
     
        <fieldset>
            <legend>
                @Html.DisplayFor(x => x[i].SelectedPair.SelectedTip.Pair)


            </legend>

            <ul>


                <li>

                </li>
                <li>

                    @Html.DisplayFor(x => x[i].SelectedPair)


                </li>




            </ul>



        </fieldset>



    }
}


